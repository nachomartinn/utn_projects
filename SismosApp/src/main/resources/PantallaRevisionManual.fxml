<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.PantallaRevisionManual"
            stylesheets="@styles.css"
            prefWidth="740" prefHeight="650">

   <children>

      <!-- Botón principal -->
      <Button fx:id="btnRegistrarRevision"
              layoutX="20" layoutY="20"
              onAction="#opcionRegistrarRevisionManual"
              text="Registrar Resultado de Revisión Manual" />

      <!-- Contenedor con scroll -->
      <ScrollPane fx:id="scrollContenedorRevision"
                  layoutX="0" layoutY="70"
                  prefWidth="740" prefHeight="560"
                  fitToWidth="true"
                  pannable="true"
                  hbarPolicy="NEVER" vbarPolicy="AS_NEEDED">

         <content>

            <VBox spacing="25" alignment="TOP_LEFT" prefWidth="720" style="-fx-padding: 15;">

               <VBox fx:id="contenedorRevisionCompleto" visible="false" spacing="20">

                  <!-- Título -->
                  <Label text="Eventos Sísmicos"
                         style="-fx-font-size: 18px; -fx-font-weight: bold;" />

                  <!-- Tabla de eventos -->
                  <TableView fx:id="tablaEventos" prefHeight="250">
                     <columns>
                        <TableColumn fx:id="columnaFecha" prefWidth="140" text="Fecha y Hora" />
                        <TableColumn fx:id="columnaLatEpicentro" prefWidth="100" text="Latitud Epicentro" />
                        <TableColumn fx:id="columnaLatHipocentro" prefWidth="100" text="Latitud Hipocentro" />
                        <TableColumn fx:id="columnaLongEpicentro" prefWidth="80" text="Longitud Epicentro" />
                        <TableColumn fx:id="columnaLongHipocentro" prefWidth="120" text="Longitud Hipocentro" />
                        <TableColumn fx:id="columnaMagnitud" prefWidth="140" text="Magnitud" />
                     </columns>
                  </TableView>

                  <!-- Botón seleccionar evento alineado a la derecha -->
                  <HBox alignment="CENTER_RIGHT">
                     <Button fx:id="btnSeleccionarEvento"
                             onAction="#tomarSeleccionDeEvento"
                             prefWidth="180"
                             text="Seleccionar Evento" />
                  </HBox>

                  <!-- Detalles -->
                  <Label text="Datos del evento seleccionado"
                         style="-fx-font-size: 14px; -fx-font-weight: bold;" />

                  <TableView fx:id="tablaDetalles" prefHeight="150">
                     <columns>
                        <TableColumn fx:id="columnaPropiedad" prefWidth="120" text="Propiedad" />
                        <TableColumn fx:id="columnaNombre" prefWidth="200" text="Nombre" />
                        <TableColumn fx:id="columnaDescripcion" prefWidth="240" text="Descripción" />
                     </columns>
                  </TableView>

                  <!-- Series -->
                  <Label text="Muestras de series temporales por estación sismológica"
                         style="-fx-font-size: 14px; -fx-font-weight: bold;" />

                  <TableView fx:id="tablaSeries" prefHeight="150">
                     <columns>
                        <TableColumn fx:id="columnaEstacion" prefWidth="200" text="Estación" />
                        <TableColumn fx:id="columnaFechaHora" prefWidth="160" text="Fecha/Hora muestra" />
                        <TableColumn fx:id="columnaVelocidad" prefWidth="110" text="Velocidad (Km/seg)" />
                        <TableColumn fx:id="columnaFrecuencia" prefWidth="110" text="Frecuencia (Hz)" />
                        <TableColumn fx:id="columnaLongitud" prefWidth="100" text="Longitud" />
                     </columns>
                  </TableView>

                  <!-- Botones de acciones alineados a la derecha -->
                  <HBox alignment="CENTER_RIGHT" spacing="10">
                     <Button fx:id="btnModificar" disable="true"
                             prefWidth="140" text="Modificar Evento" />
                     <Button fx:id="btnVisualizarMapa" disable="true"
                             prefWidth="140" text="Visualizar Mapa" />
                  </HBox>

                  <!-- Sección Solicitar Selección -->
                  <Separator />
                  <VBox spacing="20" alignment="CENTER_LEFT">
                     <Label text="Solicitar Selección"
                            style="-fx-font-size: 16px; -fx-font-weight: bold;" />

                     <HBox alignment="CENTER" spacing="20">
                        <Button fx:id="btnRechazar" disable="true"
                                onAction="#tomarOpcionRechazarEvento"
                                prefWidth="160" text="Rechazar Evento" />
                        <Button fx:id="btnConfirmar" disable="true"
                                onAction="#tomarOpcionConfirmarEvento"
                                prefWidth="160" text="Confirmar Evento" />
                        <Button fx:id="btnSolicitarRevision" disable="true"
                                onAction="#tomarOpcionSolicitarRevisionExperto"
                                prefWidth="200" text="Solicitar Revisión a experto" />
                     </HBox>

                     <HBox alignment="CENTER_RIGHT">
                        <Button fx:id="btnCerrar"
                                onAction="#cerrarPantalla"
                                prefWidth="100" text="Cerrar" />
                     </HBox>
                  </VBox>

               </VBox>
            </VBox>

         </content>
      </ScrollPane>

   </children>
</AnchorPane>
